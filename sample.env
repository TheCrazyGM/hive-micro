# Flask session secret (IMPORTANT: change in production)
FLASK_SECRET_KEY=dev-secret-key-change-me

# SQLAlchemy database URL
# Examples:
#   SQLite (default): sqlite:///app.db
#   Postgres: postgresql+psycopg2://user:pass@localhost:5432/hive_micro
#   MySQL: mysql+pymysql://user:pass@localhost:3306/hive_micro
DATABASE_URL=sqlite:///app.db

# Cache backend for Flask-Caching
# Common values: SimpleCache (in-memory, default), RedisCache (requires Flask-Caching[redis])
CACHE_TYPE=SimpleCache
# Default cache TTL (seconds)
CACHE_DEFAULT_TIMEOUT=60

# App id for custom_json posts (must match front-end)
HIVE_MICRO_APP_ID=hive.micro

# Optional: Comma-separated list of Hive API nodes to use
# Example:
#   HIVE_NODES=https://api.hive.blog,https://api.syncad.com
HIVE_NODES=https://api.syncad.com,https://api.hive.blog

# Optional: Enable block watcher (default: 1)
HIVE_MICRO_WATCHER=1

# Logging
# Log level for application logs: DEBUG, INFO, WARNING, ERROR, CRITICAL
# INFO is a sensible default; set to DEBUG for verbose development logs
HIVE_MICRO_LOG_LEVEL=INFO

# Watcher tuning
# Sleep time (seconds) when up-to-date or after single-mode batches.
# Hive block interval is ~3s; 2.5â€“3.0s is reasonable to avoid unnecessary polling.
HIVE_MICRO_SINGLE_SLEEP_SEC=2.5

# Optional: Maximum content length (characters) for composer and previews
# Timeline and mentions responses will be truncated to this length; permalinks show full content.
HIVE_MICRO_MAX_LEN=512

# Optional:  Enable Youtube Rendering
HIVE_MICRO_YOUTUBE_PREVIEW=1

# Moderation settings
# Comma-separated list of moderator usernames (lowercase)
HIVE_MICRO_MODERATORS=
# Required number of distinct moderator approvals to hide a post (default 1)
HIVE_MICRO_MOD_QUORUM=1
# Require a non-empty reason when hiding content (0/1, default 0)
HIVE_MICRO_MOD_REASON_REQUIRED=0
# Require per-action Keychain signature for moderator actions (0/1, default 0)
HIVE_MICRO_MOD_REQUIRE_SIG=0

# Login freshness window (seconds). Proofs older/newer than this are rejected.
HIVE_MICRO_LOGIN_MAX_SKEW=120

# Cookie security (recommended for production behind HTTPS)
# When serving over HTTPS, set SESSION_COOKIE_SECURE=1
SESSION_COOKIE_SECURE=0
# SameSite policy for session cookies (Lax/Strict/None)
SESSION_COOKIE_SAMESITE=Lax
# Session persistence settings
# Make sessions survive browser restarts (0/1, default 1)
SESSION_PERMANENT=1
# Session lifetime in seconds (default 2592000 = 30 days)
PERMANENT_SESSION_LIFETIME=2592000

# Tipping configuration
# Always includes HIVE and HBD. Provide additional Hive-Engine token symbols (comma-separated)
# Example for your main app: oneup,archon,pimp,pizza
HIVE_MICRO_TIP_TOKENS=oneup,archon,pimp,pizza
# Memo prefix used when pre-filling the tip memo
HIVE_MICRO_TIP_MEMO_PREFIX=hive.micro tip
